<div class="card text-white bg-dark">
    <div class="card-header">
        <div class="row">
            <div class="col-5"></div>
            <div class="col-4">
                <h2>Editar Categoria</h2>
            </div>
            <div class="col-3"></div>
        </div>
    </div>
    <div class="card-body bg-dark">
        <div class="row">
            <div class="col-4">
            </div>
            <div class="col-4">
                <form action="/Categorias/SalvarDados" method="post">
                    <lable>Código</lable>
                    <input name="Id" type="text" readonly value="@Model.Id"

                    <lable>Nome</lable>
                    <input type="text" name="Nome" class="form-control" value="@Model.Nome" />
                    <br />

                    <button type="submit" class="btn btn-success">Salvar Categoria</button>
                </form>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</div>

