@model WebApp_Tarde.Models.NovoProdutoViewModel




<div class="card text-white bg-dark">
    <div class="card-header">
        <div class="row">
            <div class="col-5"></div>
            <div class="col-4">
                <h2>Novo Produto</h2>
            </div>
            <div class="col-3"></div>
        </div>
    </div>
    <div class="card-body bg-dark">
        <div class="row">
            <div class="col-4">
            </div>
            <div class="col-4">
                
                <form action="/Produtos/SalvarDados" method="post">
                    <lable>Descrição</lable>
                    <input name="Descricao" type="text" class="form-control" />
                    <br />

                    <lable>Valor</lable>
                    <input type="number" name="Valor" class="form-control" />
                    <br />

                    <lable>Ativo</lable>
                    <input type="number" name="Ativo" class="form-control" />
                    <br />

                    <label> Categoria</label>
                    <select name="CategoriaId">
                        @foreach (var categoria in Model.Lista_Categorias)
                        {
                            <option value ="@categoria.Id">@categoria.Nome</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-success">Salvar Produtos</button>
                </form>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</div>
