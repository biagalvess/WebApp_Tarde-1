@model List<WebApp_Tarde.Entidades.ProdutoEntidade>
<div class="card text-white bg-dark">
    <div class="card-header">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <h2>Lista de Produtos</h2>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
    <div class="card-body bg-dark">
        <div class="row">
            <div class="col-2">
                <a href="/Produtos/Cadastro"
                   class="btn btn-success">
                    Novo Produto
                </a>
            </div>
            <div class="col-3">
                <select name="filtro" class="form-control">
                    <option value="0">Todos os campos</option>
                    <option value="id">Por Id</option>
                    <option value="nome">Por Nome</option>
                    <option value="quantidade">Por Quantidade</option>
                    <option value="preco">Por Preço</option>
                </select>
            </div>
            <div class="col-5">
                <input type="text" name="busca" class="form-control" />
            </div>
            <div class="col-2">
                <button class="btn btn-primary" type="submit">Pesquisar</button>
            </div>
        </div>
        <table class="table table-dark">

            <thead>
                <tr>
                    <th>Código</th>
                    <th>Descricao</th>
                    <th>Valor</th>
                    <th>Categoria</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var produto in Model)
                {
                    <tr>
                        <td>@produto.Id</td>
                        <td>@produto.Descricao</td>
                        <td>@produto.Valor</td>
                        <td>@produto.Categoria.Nome</td>
                        <td>
                            <a href="/Produtos/Editar/@produto.Id"
                               class="btn btn-warning">
                                Editar
                            </a>
                            <a href="/Produtos/Excluir/@produto.Id"
                               class="btn btn-danger">
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    </div>
